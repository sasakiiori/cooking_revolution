<h1>COOKING REVOLUTION</h1>
<h3>料理投稿サイト、COOKING REVOLUTIONへようこそ</h3>
<br>

<h2 class="mt-3">投稿</h2>

<%= form_with model: @post, local: true do |f| %>

  <div class="form-group">
    <%= f.label :name, "料理名" %>
    <%= f.text_field :name, class: "form-control col-4" %>
  </div>

  <div class="form-group">
    <%= f.label :image, "写真" %>
    <%= f.file_field :image, class: "form-control col-4" %>
  </div>

  <div class="form-group">
    <%= f.label :explanation, "料理説明" %>
    <%= f.text_area :explanation, class: "form-control col-4" %>
  </div>

  <%= f.submit '投稿する', class: "btn btn-success"%>
  <%= f.submit '下書き', class: "btn btn-success"%>
<% end %>

